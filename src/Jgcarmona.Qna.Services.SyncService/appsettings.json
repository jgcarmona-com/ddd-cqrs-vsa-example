{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "apiKey": "SeqApiKey"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithCorrelationId" ]
  },
  "CommonFeatureFlags": {
    "MessagingProvider": "RabbitMQ" // or "AzureEventHub"
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://qnauser:YourStrong@Passw0rd@mongodb:27017", // Para Docker
    "DatabaseName": "QnaDatabase"
  },
  "RabbitMQSettings": {
    "HostName": "rabbitmq",
    "UserName": "qnauser",
    "Password": "P@ssw0rd!",
    "QueueName": "events_sync_service_queue",
    "ExchangeName": "events_exchange",
    "RoutingKey": "events.routingkey"
  }
}