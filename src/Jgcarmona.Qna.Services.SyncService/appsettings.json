{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "apiKey": "SeqApiKey"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithCorrelationId" ]
  },
  "FeatureFlags": {
    "MessagingProvider": "RabbitMQ",
    "SecretsProvider": "LocalEnv"
  },
  "MongoDbSettings": {
    "ConnectionString": "${MONGO_CONNECTION_STRING}",
    "DatabaseName": "QnaDatabase"
  },
  "RabbitMQSettings": {
    "HostName": "${RABBITMQ_HOSTNAME}",
    "UserName": "${RABBITMQ_USERNAME}",
    "Password": "${RABBITMQ_PASSWORD}",
    "QueueName": "events_stats_service_queue",
    "ExchangeName": "events_exchange",
    "RoutingKey": "events.routingkey"
  }
}